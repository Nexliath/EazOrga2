{{#mobile-toolbar}}
  {{side-menu-toggle-custom}}
  <span class="navbar-brand text-center">
    {{partial "shared/brand"}}
  </span>
{{/mobile-toolbar}}

{{#ember-wormhole to="navbar-right"}}
  <ul class="nav navbar-nav navbar-right">
    {{scroll-to href="#about" label="A propos"}}
    {{#if (any model.previousEvents)}}
      {{scroll-to href="#events" label="Evénements"}}
    {{/if}}
    {{scroll-to href="#features" label="Fonctionnalités"}}
    <li>
      <a href="https://github.com/Nexliath/EazOrga2" target="_blank" rel="noopener" title="SplittyPie Source Code">
        {{inline-svg "github" class="icon"}}
        Source
      </a>
    </li>
    {{#nav-link-to "new" title="Créer un nouvel événement"}}
      {{inline-svg "plus" class="icon"}}
      Nouvel événement
    {{/nav-link-to}}
  </ul>
{{/ember-wormhole}}

<div class="index-sections">
  <section id="about">
    <div class="row main">
      <div class="col-sm-7 main-promotion-text">
        <h1>Une meilleure organisation de vos événements</h1>
        <p>
          Créez un événement, ajoutez des utilisateurs et leurs dépenses. EazOrga calculera qui doit à qui et combien exactement.
          C'est <strong>Gratuit</strong> et sans <strong class="text-nowrap">Inscription</strong>.
        </p>
        <p>{{link-to "Create New Event" "new" class="btn btn-lg btn-success"}}</p>
      </div>
      <div class="col-sm-5 main-promotion-image">
        <img src="/assets/app_iphone.png" alt="App preview on iOS">
      </div>
    </div>
  </section>

  {{#if (any model.previousEvents)}}
    {{previous-events events=model.previousEvents}}
  {{/if}}

  <section id="features">
    <h3 class="text-center">En découvrir plus sur EazOrga</h3>

    <div class="row">
      <div class="col-md-4 text-center">
        <div class="feature-img-container">
          <img src="/assets/responsive.jpg" alt="Works anywhere. Responsive">
        </div>
        <h4>Un système de chat en direct</h4>
        <p>
          Ou que vous soyez, quand vous voulez.
          Retrouvez vos amis sur notre chat et mettez vous d'accord sur l'organisation de votre événement!
        </p>
      </div>
      <div class="col-md-4 text-center">
        <div class="feature-img-container">
          <img src="/assets/stopwatch.png" alt="Fast and realtime">
        </div>
        <h4>Un calcul des dépenses</h4>
        <p>
          C'est vraiment rapide et dynamique.
          De plus, vos amis verront toutes vos modifications
          en temps réel sans rafraîchir la page!
        </p>
      </div>
      <div class="col-md-4 text-center">
        <div class="feature-img-container">
          <img src="/assets/offline.png" alt="Offline Enabled">
        </div>
        <h4>Un album partagé</h4>
        <p>
          Avec EazOrga, retrouvez facilement vos photo de soirée,
          événement et autre, centralisé au même endroit!
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 text-center">
        <div class="feature-img-container">
          <img src="/assets/free.png" alt="Free of charge">
        </div>
        <h4>Des jeux intégrés</h4>
        <p>
          Plusieurs jeux sont proposés,
          Post-it, Times up et bientôt plus !
        </p>
      </div>
      <div class="col-md-4 text-center">
        <div class="feature-img-container">
          <img src="/assets/share.png" alt="Easy to share">
        </div>
        <h4>Un site gratuit</h4>
        <p>
          Pas besoin d'inscription,
          Pas besoin de payer, c'est gratuit
        </p>
      </div>
      <div class="col-md-4 text-center">
        <div class="feature-img-container">
          <img src="/assets/open-source.png" alt="Open Source">
        </div>
        <h4>Open Source</h4>
        <p>
          Oui, c'est open source. Retrouvez notre code ici <a href="https://github.com/Nexliath/EazOrga2" target="_blank" rel="noopener" title="SplittyPie Source Code">github</a>.
        </p>
      </div>
    </div>
  </section>

  <div class="small-border"></div>

  <section class="social-list">
    <a href="https://github.com/Nexliath/EazOrga2" target="_blank" rel="noopener" title="SplittyPie Source Code">
      {{inline-svg "github" class="icon icon-md"}}
    </a>
    <a href="https://cowbell-labs.com" target="_blank" rel="noopener" title="Author Cowbell-Labs Page">
      {{inline-svg "cowbell" class="icon icon-md cowbell"}}
    </a>
    <a href="https://facebook.com/splittypie" target="_blank" rel="noopener" title="Facebook Page">
      {{inline-svg "facebook" class="icon icon-md"}}
    </a>
    <a href="https://twitter.com/splittypie" target="_blank" rel="noopener" title="Twitter Page">
      {{inline-svg "twitter" class="icon icon-md"}}
    </a>
  </section>
</div>
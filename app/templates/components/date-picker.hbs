{{#if isMobile}}
  <Input @type="date" @value={{value}} class={{dateInputClasses}} @min={{min}} @max={{max}} />
{{else}}
  <PikadayInput @class={{dateInputClasses}} @value={{pikadayValue}} @minDate={{pikadayMin}} @maxDate={{pikadayMax}} @format="YYYY-MM-DD" @useUTC={{true}} @onSelection={{action (mut pikadayValue)}} />
{{/if}}
{{#mobile-toolbar}}
  {{back-button}}
  <span class="navbar-brand">{{title}}</span>
{{/mobile-toolbar}}

<h4 class="hidden-xs">{{title}}</h4>

<form>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="form-group">
        <label class="control-label">Qui a payé?</label>
        <div class="input-group">
          <p class="form-control-static transfer-sender">
            {{transfer.sender.name}}
          </p>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">Avec qui?</label>
        <div class="input-group">
          <p class="form-control-static transfer-recipient">
            {{transfer.recipient.name}}
          </p>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">Combien?</label>
        <div class="input-group">
          <span class="input-group-addon">{{transfer.event.currency.code}}</span>
          <p class="form-control-static transfer-amount">
            {{transfer.amount}}
          </p>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label">Quand?</label>
        <p class="form-control-static transfer-date">
          {{transfer.date}}
        </p>
      </div>

      {{#unless transfer.isNew}}
        <div class="form-group">
          <label class="control-label">Autre options:</label>
          <div class="input-group">
            <button {{action "delete"}} class="btn btn-danger delete-transfer">Supprimer le transfère</button>
          </div>
        </div>
      {{/unless}}
    </div>
  </div>

  <div class="form-group hidden-xs">
    {{#back-button}}
      Annuler
    {{/back-button}}
  </div>
</form>
<button class="btn btn-link btn-lg dropdown-toggle btn-change-event" type="button" id="dropDownEvents" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
  {{selected.name}}
  <span class="caret"></span>
</button>
<ul class="dropdown-menu" aria-labelledby="dropDownEvents">
  {{#if anyOtherEvents}}
    <li class="dropdown-header">Changer pour</li>
    {{#each otherEvents as |event|}}
      <li>
        {{#link-to "event.index" event.id}}
          {{inline-svg "calendar" class="icon"}} {{event.name}}
        {{/link-to}}
      </li>
    {{/each}}
    <li role="separator" class="divider"></li>
  {{/if}}
  <li>
    {{#link-to "new"}}
      {{inline-svg "plus" class="icon"}}
      Ajouter un nouvel événement
    {{/link-to}}
  </li>
</ul>
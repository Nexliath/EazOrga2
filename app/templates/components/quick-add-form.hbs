<form>
  <ModalDialog>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true" aria-label="Dismiss">&times;</button>
      <h4 class="modal-title">Quick Add!</h4>
    </div>
    <div class="modal-body pull-up-30">
      <div class="form-group {{if isFormInvalid "has-error"}}">
        <Input @value={{transactionToParse}} class="form-control transaction-parse" placeholder="Example: 10 tickets" />
        <div class="help-block">
          More examples: 03/24 40 Museum Tickets | 12 20 shopping
        </div>
        <div>
          {{#if transaction}}
            <TransactionListItem @transaction={{transaction}} />
          {{/if}}
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default pull-left btn-add-with-details" {{action "addWithDetails"}} data-dismiss="modal">Add With Details</button>
      <button type="submit" class="btn btn-primary btn-add" {{action "add"}} disabled={{isFormInvalid}}  data-dismiss="modal">Add</button>
    </div>
  </ModalDialog>
</form>

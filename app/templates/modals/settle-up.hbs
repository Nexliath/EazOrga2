<ModalDialog>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true" aria-label="Dismiss">&times;</button>
    <h4 class="modal-title">Settle Up!</h4>
  </div>
  <div class="modal-body">
    All settled between {{model.transfer.sender.name}} and {{model.transfer.recipient.name}}?
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-primary" {{action "invokeAction" model.actions.yes}}>Yes</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
  </div>
</ModalDialog>